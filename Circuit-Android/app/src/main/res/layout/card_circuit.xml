<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/circcard_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    card_view:cardBackgroundColor="@color/colorRoseMoreLight"
    card_view:cardCornerRadius="15dp"
    card_view:cardElevation="12dp"
    card_view:contentPadding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="2dp">

        <ImageView
            android:id="@+id/img_circuit"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/iconcircuit" />

        <TextView
            android:id="@+id/titre_circuit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_circuit"
            android:layout_gravity="center"
            android:text="Titre Circuit"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/desc_circuit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titre_circuit"
            android:text="Description pour notre circuit"
            android:textColor="#000"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_acheter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="50dp"
                android:text="@string/btn_acheter"
                android:textStyle="bold"
                android:theme="@style/PrimaryFlatButton" />

            <Button
                android:id="@+id/btn_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_detail"
                android:textStyle="bold"
                android:theme="@style/PrimaryFlatButton" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>

